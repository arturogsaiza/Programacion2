package materia;

/**
 *Esta clase la utilizaremos para crear Materias de todo tipo
 * @author Lopez Murillo
 * @version 29/04/2020
 * @see <a href="http://itson.mx" > ir a itson a ver mas sobre el proyecto </a>
 */
public class Materia {
    
    String nombre;
    int id;
    String maestro;
    
    /**
     * Este constructor funcionara para instanciar materias sin inicializar
     */
    public Materia() {
    }
    
    /**
     *  este constructor funcionara para instanciar materias inicializados 
     * @param nombre es el nombre de la materia
     * @param id es el id de la materia
     * @param maestro  es el maestro que da la materia
     */

    public Materia(String nombre, int id, String maestro) {
        this.nombre = nombre;
        this.id = id;
        this.maestro = maestro;
    }
    
    /**
     * se metodo funcionara para saber el nombre de la materia que dio de alta
     * @param nombre el nombre de la materia
     * @return  retorna una frase con la materia ingresada
     */
    public String Alta(String nombre){
    return   "Estas ingresando a la materia de: "+nombre;
    }
    /**
     * se metodo funcionara para conocer el maestro que da la maeria
     * @param maestro el maestro que esta indicado
     * @return  retorna una frase que indica el maestro que se asigna
     */
    public String Maestro(String maestro){
    return   "Te uniste a la materia del maestro: "+maestro;
    }

    public String getNombre() {
        return nombre;
    }

    public void setNombre(String nombre) {
        this.nombre = nombre;
    }

    public int getId() {
        return id;
    }

    public void setId(int id) {
        this.id = id;
    }

    public String getMaestro() {
        return maestro;
    }

    public void setMaestro(String maestro) {
        this.maestro = maestro;
    }
    

    
}
